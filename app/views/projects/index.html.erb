<p id="notice"><%= notice %></p>

<main role="main">
      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Welcome to Portfolio!</h1>
          <p>Welcome to Portfolio! This site is designed to allow its users to display their accomplishments for work, school, or anything! Sign up and show off what you can do!</p>
          <p><%= link_to "Sign up", new_student_registration_path, :class => "btn btn-primary btn-lg"%></p>
        </div>
      </div>
      
      <div class="container">
      <h1>Projects</h1>
        <div class="row">
          <% @projects.each do |project| %>
            <div class="col-md-4">
              <h2><%= project.title %></h2>
             <p><%= project.description %></p>
              <p><%= link_to 'Show', project, :class => "btn btn-secondary"%></p>
              <p><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-secondary"%></p>
              <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning"%></p>
            </div>
          <% end %>
        </div>
        <%= link_to 'New Project', new_project_path, :class => "btn btn-success"%>
      </div>  
    </main>